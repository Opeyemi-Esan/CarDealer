@model CarDealer.Models.CarDto
@{
    ViewData["Title"] = "Upload Car";
}
<div class="min-h-screen py-20 bg-gray-300">
    <div class="max-w-2xl py-20 px-20 bg-gray-500 rounded-2xl mx-auto">
        <h2 class="text-4xl font-bold mb-8 text-center text-gray-800">Upload New Car</h2>
        <form asp-action="UploadCar" asp-controller="Admin" method="post" enctype="multipart/form-data" class="max-w-md mx-auto">
            <div class="mb-4">
                <label asp-for="Make" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Make" placeholder="Make" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Make" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Model" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Model" placeholder="Model" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Model" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Year" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Year" type="number" placeholder="Year" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Year" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Price" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Price" type="number" step="0.01" placeholder="0" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Price" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Description" class="block text-gray-200 font-semibold"></label>
                <textarea asp-for="Description" placeholder="Description" class="w-full px-3 py-2 border rounded focus:outline-none"></textarea>
                <span asp-validation-for="Description" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label class="block text-gray-200 font-semibold">Image</label>
                <input type="file" asp-for="Image" accept="image/*" class="w-full px-3 py-2 border rounded bg-gray-400">
                <span asp-validation-for="Image" class="text-red-500"></span>
            </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 ease-in-out">
                Upload Car
            </button>
            <a asp-action="RetrieveCars" asp-controller="Admin" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 ease-in-out">
                View Uploaded Cars
            </a>
        </form>

    </div>
    

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}