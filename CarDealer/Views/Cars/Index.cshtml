
@model IEnumerable<CarDealer.Models.Car>
@{
    ViewData["Title"] = "Our Cars";
}
<div class="mx-auto px-20 py-20 bg-gray-400">
    <h2 class="text-4xl font-bold mb-8 text-gray-800">Our Cars</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        @foreach (var car in Model)
        {
            <div class="border bg-gray-300 rounded-lg p-4">
                <img src="@car.ImageUrl" alt="@car.Make @car.Model" class="w-full h-48 object-cover mb-4">
                <h3 class="text-xl font-bold">@car.Make @car.Model (@car.Year)</h3>
                <p class="text-gray-600 font-bold">N @car.Price</p>
                <p class="text-gray-600 truncate">@car.Description</p>
                <a href="/Cars/Details/@car.Id" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2 inline-block transtion-all duration-300 ease-in-out">
                    View Details
                </a>
            </div>
        }
    </div>
</div>