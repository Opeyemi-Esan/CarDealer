@{
    ViewData["Title"] = "Home Page";
}

<div class="w-full h-screen flex items-center justify-center relative overflow-hidden">

    <video src="https://thecarboutique.com.au/wp-content/uploads/2025/03/4682819_Traffic_Straight_1920x1080.mp4"
           autoplay muted playsinline loop
           class="absolute inset-0 w-full h-full object-cover z-0">
    </video>

    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-40 z-10"></div>

    <div class="relative z-20 text-center bg-black bg-opacity-30 p-20 rounded-2xl">
        <h1 class="text-4xl font-bold text-white mb-8">Welcome to Our Car Dealership</h1>
        <p class="text-white mb-10 font-bold">Browse our collection of quality vehicles</p>

        <div class="space-x-4">
            <a href="/Cars" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 ease-in-out">
                View Our Cars
            </a>
            <a asp-controller="Admin" asp-action="Login" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition-all duration-300 ease-in-out">
                Admin Login
            </a>
        </div>
    </div>
</div>


