@model CarDealer.Models.Inquiry
@{
    ViewData["Title"] = "Submit Inquiry";
}
<div class=" px-4 py-20 min-h-screen flex justify-center bg-gray-300">
    <div class="bg-gray-500 max-w-md m-auto py-20 px-20 rounded-2xl flex-1">
        <h2 class="text-3xl font-bold mb-6 text-white text-center">Submit Inquiry</h2>
        <form action="/Inquiries/Create" method="post" class="max-w-md">
            <input type="hidden" asp-for="CarId" />
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Name" placeholder="Name" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Name" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-200 font-semibold"></label>
                <input asp-for="Email" placeholder="Email" class="w-full px-3 py-2 border rounded focus:outline-none">
                <span asp-validation-for="Email" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Message" class="block text-gray-200 font-semibold"></label>
                <textarea asp-for="Message" placeholder="Enter your message" class="w-full px-3 py-2 border rounded focus:outline-none"></textarea>
                <span asp-validation-for="Message" class="text-red-500"></span>
            </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-gray-100 font-bold py-2 px-4 rounded w-full transition-all duration-300 ease-in-out">
                Submit Inquiry
            </button>
        </form>
    </div>
    
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}